@{
    ViewBag.Title = "Link Meta Demo";
}

<h2>Link Meta Demo</h2>

<input type="text" id="url" name="url" value="http://www.google.com" />
<br />
<a href="#" id="get_meta_link">Get Meta</a>
<span id="puLinkLoading" style="display:none;"> <img src="/Content/loading.gif" /> </span>
<div id="puLinkDisplay" class="puLinkDisplay" style="display:none;">
    <div id="puLinkRemoveSection" class="puLinkRemoveSection"><a id="puLinkRemoveLink">remove</a></div>
    <div style="width: 32px; height: 32px; float:left;" >
        <img id="puLinkImg" class="puLinkImg" src="" />
    </div>
    <div style="float:left;" >
        <div id="puLinkTitle" class="puLinkTitle"></div>
        <div id="puLinkUrl" class="puLinkUrl"></div>
        <div id="puLinkDescription" class="puLinkDescription"></div>
    </div>
    <div style="clear:both;"></div>
</div>

<script src="@Url.Content("~/Scripts/linkmeta.js")" type="text/javascript"></script>

<script>
    $().ready(function () {
        if (typeof console === "undefined") {
            console = { log: function () { } };
        }

        $('#puLinkImg').imgscale();

        $('#get_meta_link').click(function () {
            linkmeta.getLinkPreview($('#url').val());
            return false;
        });
    });
</script>